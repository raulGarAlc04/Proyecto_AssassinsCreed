<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/photoDominio"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/dominioName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre dominio"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/photoDominio"
            android:textSize="15dp"
            android:fontFamily="@font/cinzel_regular"/>

        <TextView
            android:id="@+id/liderDominio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lider"
            app:layout_constraintTop_toBottomOf="@id/dominioName"
            app:layout_constraintLeft_toRightOf="@id/photoDominio"
            android:textSize="15dp"
            android:fontFamily="@font/cinzel_regular"/>

        <TextView
            android:id="@+id/capital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capital"
            app:layout_constraintLeft_toRightOf="@id/photoDominio"
            app:layout_constraintTop_toBottomOf="@id/liderDominio"
            android:textSize="15dp"
            android:fontFamily="@font/cinzel_regular"/>

        <TextView
            android:id="@+id/domCriminal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Criminal"
            app:layout_constraintTop_toBottomOf="@id/capital"
            app:layout_constraintLeft_toRightOf="@id/photoDominio"
            android:textSize="15dp"
            android:fontFamily="@font/cinzel_regular"/>

        <TextView
            android:id="@+id/descripcionDominio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripcion"
            app:layout_constraintTop_toBottomOf="@id/domCriminal"
            app:layout_constraintLeft_toRightOf="@id/photoDominio"
            android:textSize="15dp"
            android:fontFamily="@font/cinzel_regular"/>

        <Button
            android:id="@+id/trashButton"
            android:layout_width="51dp"
            android:layout_height="55dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:drawableTop="@drawable/ic_trash"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>