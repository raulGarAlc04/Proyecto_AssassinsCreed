<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/photoAfiliacion"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/afiliacionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre afiliacion"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/photoAfiliacion"
            android:textSize="15dp"
            android:fontFamily="@font/cinzel_regular"/>

        <TextView
            android:id="@+id/lider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lider"
            app:layout_constraintTop_toBottomOf="@id/afiliacionName"
            app:layout_constraintLeft_toRightOf="@id/photoAfiliacion"
            android:textSize="15dp"
            android:fontFamily="@font/cinzel_regular"/>

        <TextView
            android:id="@+id/guarida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guarida"
            app:layout_constraintLeft_toRightOf="@id/photoAfiliacion"
            app:layout_constraintTop_toBottomOf="@id/lider"
            android:textSize="15dp"
            android:fontFamily="@font/cinzel_regular"/>

        <TextView
            android:id="@+id/fechaFundacionAf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha Fundacion"
            app:layout_constraintTop_toBottomOf="@id/guarida"
            app:layout_constraintLeft_toRightOf="@id/photoAfiliacion"
            android:textSize="15dp"
            android:fontFamily="@font/cinzel_regular"/>

        <TextView
            android:id="@+id/descripcionAfiliacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripcion"
            app:layout_constraintTop_toBottomOf="@id/fechaFundacionAf"
            app:layout_constraintLeft_toRightOf="@id/photoAfiliacion"
            android:textSize="15dp"
            android:fontFamily="@font/cinzel_regular"/>

        <TextView
            android:id="@+id/orgCriminal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organizacion Criminal"
            app:layout_constraintTop_toBottomOf="@id/descripcionAfiliacion"
            app:layout_constraintLeft_toRightOf="@id/photoAfiliacion"
            android:textSize="15dp"
            android:fontFamily="@font/cinzel_regular"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>